    <!-- JavaScript Logic -->
    <script>
        // API Configuration (Leave apiKey blank)
        const API_KEY = "";
        const API_URL = "https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=" + API_KEY;

        // --- Utility Functions ---

        function showLoading(loaderId, buttonTextId, loadingText) {
            document.getElementById(loaderId).classList.remove('hidden');
            document.getElementById(buttonTextId).textContent = loadingText;
            document.getElementById(buttonTextId).parentElement.disabled = true;
        }

        function hideLoading(loaderId, buttonTextId, originalText) {
            document.getElementById(loaderId).classList.add('hidden');
            document.getElementById(buttonTextId).textContent = originalText;
            document.getElementById(buttonTextId).parentElement.disabled = false;
        }
        
        function copyToClipboard(elementId) {
            const textToCopy = document.getElementById(elementId).innerText;
            try {
                navigator.clipboard.writeText(textToCopy);
                document.getElementById('copyRfqBtn').textContent = 'COPIED!';
                setTimeout(() => document.getElementById('copyRfqBtn').textContent = 'COPY TO CLIPBOARD', 2000);
            } catch (err) {
                document.getElementById('copyRfqBtn').textContent = 'COPY FAILED';
            }
        }

        // --- 1. Tab Interaction Logic ---
        function switchTab(tabId) {
            document.querySelectorAll('.feature-content').forEach(el => el.classList.add('hidden'));
            
            document.querySelectorAll('.feature-tab').forEach(el => {
                el.classList.remove('bg-white', 'shadow-md', 'border-yellow-500', 'active-tab');
                el.classList.add('bg-gray-200', 'border-transparent');
                el.querySelector('span.text-green-600')?.classList.add('opacity-0');
                el.querySelector('span.text-black')?.classList.add('opacity-0');
            });

            const content = document.getElementById(`content-${tabId}`);
            if (content) {
                content.classList.remove('hidden');
                content.style.opacity = '0';
                setTimeout(() => content.style.opacity = '1', 50);
                content.style.transition = 'opacity 0.3s ease';
            }

            const tab = document.getElementById(`tab-${tabId}`);
            if (tab) {
                tab.classList.remove('bg-gray-200', 'border-transparent');
                tab.classList.add('bg-white', 'shadow-md', 'border-yellow-500', 'active-tab');
                tab.querySelector('span.text-green-600')?.classList.remove('opacity-0');
            }
        }

        // Initialize default tab
        document.addEventListener('DOMContentLoaded', () => {
            switchTab('reliability');
            initChart();
        });


        // --- 2. Chart.js Implementation & Sizing Logic ---
        let performanceChart;
        let sizingPointId = 'sizingPoint';
        let sizingPointData = { x: 10, y: 100 };

        const modelData = {
            'GCB-07': [ {x: 0, y: 125}, {x: 3, y: 121}, {x: 6, y: 118}, {x: 9, y: 105}, {x: 12, y: 75}, {x: 13, y: 0} ],
            'GCB-10': [ {x: 0, y: 195}, {x: 3, y: 188}, {x: 6, y: 178}, {x: 9, y: 165}, {x: 12, y: 139}, {x: 15, y: 100}, {x: 17, y: 0} ]
        };

        function initChart() {
            const ctx = document.getElementById('performanceChart').getContext('2d');
            
            performanceChart = new Chart(ctx, {
                type: 'line',
                data: {
                    datasets: [
                        {
                            label: 'GCB-07 (3/4 HP)',
                            data: modelData['GCB-07'],
                            borderColor: '#eab308', /* yellow-500 */
                            backgroundColor: 'rgba(234, 179, 8, 0.1)',
                            borderWidth: 3,
                            pointBackgroundColor: '#000',
                            pointBorderColor: '#eab308',
                            pointRadius: 5,
                            pointHoverRadius: 7,
                            tension: 0.4, 
                            fill: true
                        },
                        {
                            label: 'GCB-10 (1 HP)',
                            data: modelData['GCB-10'],
                            borderColor: '#16a34a', /* green-600 */
                            backgroundColor: 'rgba(22, 163, 74, 0.1)',
                            borderWidth: 3,
                            pointBackgroundColor: '#000',
                            pointBorderColor: '#16a34a',
                            pointRadius: 5,
                            pointHoverRadius: 7,
                            tension: 0.4, 
                            fill: true
                        },
                         {
                            label: 'Required Sizing Point',
                            data: [sizingPointData],
                            backgroundColor: '#000', 
                            borderColor: '#000', 
                            borderWidth: 4,
                            pointStyle: 'crossRot', 
                            pointRadius: 10,
                            pointHoverRadius: 12,
                            showLine: false,
                            tension: 0,
                            hidden: false 
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            align: 'end',
                            labels: {
                                usePointStyle: true,
                                boxWidth: 10,
                                color: '#000'
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.9)', 
                            padding: 12,
                            titleFont: { size: 14 },
                            bodyFont: { size: 13 },
                            callbacks: {
                                title: (tooltipItems) => {
                                    return `Head: ${tooltipItems[0].parsed.x} meters`;
                                },
                                label: (context) => {
                                    if (context.datasetIndex === 2) {
                                        return `Required: ${context.parsed.y} L/min @ ${context.parsed.x} m`;
                                    }
                                    return `${context.dataset.label}: ${context.parsed.y} L/min`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            type: 'linear',
                            title: {
                                display: true,
                                text: 'Total Head (Meters)',
                                font: { weight: 'bold', color: '#000' }
                            },
                            min: 0,
                            max: 20,
                            grid: {
                                color: '#e5e7eb'
                            },
                            ticks: { color: '#000' }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Flow Rate (L/min)',
                                font: { weight: 'bold', color: '#000' }
                            },
                            min: 0,
                            max: 220,
                            grid: {
                                color: '#e5e7eb'
                            },
                            ticks: { color: '#000' }
                        }
                    }
                }
            });
        }

        function isBelowCurve(x, y, model) {
            const data = modelData[model];
            if (x < data[0].x || x > data[data.length - 1].x) {
                return false; 
            }
            for (let i = 0; i < data.length - 1; i++) {
                const p1 = data[i];
                const p2 = data[i + 1];
                if (x >= p1.x && x <= p2.x) {
                    const pumpFlow = p1.y + (p2.y - p1.y) * ((x - p1.x) / (p2.x - p1.x));
                    return y <= pumpFlow;
                }
            }
            return false;
        }

        function handleSizingCheck() {
            const flow = parseFloat(document.getElementById('requiredFlow').value);
            const head = parseFloat(document.getElementById('requiredHead').value);
            const outputEl = document.getElementById('sizingAnalysisOutput');

            if (isNaN(flow) || isNaN(head) || flow <= 0 || head <= 0) {
                outputEl.innerHTML = '<span class="text-red-600 font-bold">ERROR: Please enter valid Flow (L/min) and Head (Meters).</span>';
                return;
            }

            sizingPointData.x = head;
            sizingPointData.y = flow;
            performanceChart.data.datasets[2].data = [sizingPointData];
            performanceChart.update();

            const is07Suitable = isBelowCurve(head, flow, 'GCB-07');
            const is10Suitable = isBelowCurve(head, flow, 'GCB-10');
            
            let resultModel = 'None';
            if (is10Suitable) resultModel = 'GCB-10';
            else if (is07Suitable) resultModel = 'GCB-07';
            
            generateSizingAnalysis(resultModel, flow, head);
        }

        async function generateSizingAnalysis(model, flow, head) {
            showLoading('sizingLoader', 'sizingBtnText', 'ANALYZING...');
            const outputEl = document.getElementById('sizingAnalysisOutput');

            let modelText = "";
            let suitabilityStatus = "unsuitable";
            if (model === 'GCB-07') {
                modelText = "The recommended model is GCB-07 (3/4 HP).";
                suitabilityStatus = "suitable";
            } else if (model === 'GCB-10') {
                modelText = "The recommended model is GCB-10 (1 HP).";
                suitabilityStatus = "suitable";
            } else {
                 modelText = "Neither GCB-07 nor GCB-10 meets the requirement. Please check the higher power GCB models.";
            }

            const systemPrompt = "You are a professional hydraulic pump engineer. A user has provided their required flow (Q in L/min) and head (H in meters) for a sewage grinder pump application, and we have determined the best-fitting GCB series model. Your task is to provide a concise, technical explanation (max 3 paragraphs) detailing why this model is " + suitabilityStatus + " (or why both are unsuitable), emphasizing its BLDC motor, anti-clog features (SUS440C cutter, Reverse Jog), and noting any installation considerations based on the given head of " + head + " meters. Provide the output in English.";
            
            const userQuery = `Required Flow (Q): ${flow} L/min. Required Head (H): ${head} meters. Suitability Result: ${modelText}`;
            
            try {
                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: { parts: [{ text: systemPrompt }] },
                };
                const response = await fetchWithRetry(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || 'Analysis Failed: Could not get response from AI.';
                outputEl.innerText = text;
            } catch (error) {
                outputEl.innerText = 'Analysis Failed: API connection error or timeout. Please try again later.';
            } finally {
                hideLoading('sizingLoader', 'sizingBtnText', 'Analyze Suitability');
            }
        }

        // --- NEW: ROI Logic ---
        async function generateROIReport() {
            showLoading('roiLoader', 'roiBtnText', 'GENERATING REPORT...');
            const outputEl = document.getElementById('roiOutput');
            outputEl.classList.remove('hidden');
            
            const power = document.getElementById('roiPower').value;
            const hours = document.getElementById('roiHours').value;
            const cost = document.getElementById('roiCost').value;

            const systemPrompt = "You are an energy efficiency consultant for industrial pumps. Calculate the theoretical savings of switching from a standard AC pump to a High-Efficiency BLDC GCB Pump (assume ~30% efficiency gain). Generate a persuasive 'Sustainability & Cost Reduction Report' (max 4 paragraphs) in English. Include estimated monthly savings and explain the environmental benefits of BLDC technology (lower carbon footprint). Use bullet points for key figures.";
            
            const userQuery = `Current Pump: ${power} kW, Daily Run Time: ${hours} hours, Electricity Cost: $${cost}/kWh.`;

            try {
                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: { parts: [{ text: systemPrompt }] },
                };
                const response = await fetchWithRetry(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                outputEl.innerText = result.candidates?.[0]?.content?.parts?.[0]?.text || 'Report Failed.';
            } catch (error) {
                outputEl.innerText = 'Report Failed: API connection error.';
            } finally {
                hideLoading('roiLoader', 'roiBtnText', 'Generate ROI Report');
            }
        }

        // --- NEW: Troubleshooting Logic ---
        async function diagnoseIssue() {
            showLoading('diagnoseLoader', 'diagnoseBtnText', 'DIAGNOSING...');
            const outputEl = document.getElementById('diagnoseOutput');
            outputEl.classList.remove('hidden');
            
            const issue = document.getElementById('issueInput').value;

            const systemPrompt = "You are a senior pump field technician for Hung Pump GCB Series. Based on the user's described symptom, diagnose the likely issue using your knowledge of GCB pumps (Reverse Jog anti-jamming, Soft Start, Overload protection, LED indicators). Provide a step-by-step troubleshooting guide in English. Be concise, safety-first, and technical.";
            
            const userQuery = `Symptom: ${issue}`;

            try {
                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: { parts: [{ text: systemPrompt }] },
                };
                const response = await fetchWithRetry(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                outputEl.innerText = result.candidates?.[0]?.content?.parts?.[0]?.text || 'Diagnosis Failed.';
            } catch (error) {
                outputEl.innerText = 'Diagnosis Failed: API connection error.';
            } finally {
                hideLoading('diagnoseLoader', 'diagnoseBtnText', 'Diagnose Problem');
            }
        }

        async function generateRFQDraft() {
            showLoading('rfqLoader', 'rfqBtnText', 'DRAFTING...');
            const outputEl = document.getElementById('rfqOutput');
            const model = document.getElementById('rfqModel').value;
            const quantity = document.getElementById('rfqQuantity').value;

            const systemPrompt = "You are a professional procurement assistant drafting an email to a supplier (HUNG PUMP INDUSTRIAL CO., LTD.). The user needs a quotation for a specific model and quantity. Draft a concise, formal email requesting a quotation and lead time. Include ISO/CE/UKCA/CSA certs requirement. Provide output in English.";
            
            const userQuery = `Draft RFQ for ${model}, Qty: ${quantity}.`;
            
            try {
                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    systemInstruction: { parts: [{ text: systemPrompt }] },
                };
                const response = await fetchWithRetry(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                outputEl.innerText = result.candidates?.[0]?.content?.parts?.[0]?.text || 'Draft Failed.';
            } catch (error) {
                outputEl.innerText = 'Draft Failed: API connection error.';
            } finally {
                hideLoading('rfqLoader', 'rfqBtnText', 'Draft RFQ Email');
            }
        }

        async function fetchWithRetry(url, options, maxRetries = 5) {
            for (let i = 0; i < maxRetries; i++) {
                try {
                    const response = await fetch(url, options);
                    if (response.status !== 429) {
                        return response;
                    }
                    console.log(`Rate limit exceeded, retrying in ${2 ** i} seconds...`);
                } catch (error) {
                    console.error('Fetch attempt failed:', error);
                }
                await new Promise(resolve => setTimeout(resolve, 2 ** i * 1000));
            }
            throw new Error('API request failed after multiple retries.');
        }

    </script>
